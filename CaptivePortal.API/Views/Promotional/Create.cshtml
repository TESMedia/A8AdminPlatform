
@{
    Layout = null;

}



<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Custom Theme Style -->
    <link href="../build/css/custom.min.css" rel="stylesheet">
    <link href="~/Style/CheckBox.css" rel="stylesheet" />
    <link href="~/Style/RequiredField.css" rel="stylesheet" />
</head>

<body class="nav-md" onload="onload()">
    <div class="container body">
        <div class="main_container">
            @Html.Partial("~/Views/Shared/_LeftMenu.cshtml")
            
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">

                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_content">
                                    <br />
                                    <form></form>
                                    <div id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

                                        @if (TempData["Success"] != null)
                                        {
                                            <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
                                        }

                                        @using (Html.BeginForm("Save", "Promotional", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            @*<form>
                                            *@
                                            <div class="form-group">
                                                <label for="Success_Page_Option" class="control-label col-md-3 col-sm-3 col-xs-12 required-field">Success Page Option:</label>

                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    <select class="form-control" name="SuccessPageOption" id="SuccessPageOption" required onchange="OnChange(this.form.SuccessPageOption);">
                                                        <option value="Display">Display</option>
                                                        @*<option value="Supress">Supress</option>*@
                                                        <option value="Route to URL">Route to URL</option>
                                                    </select>
                                                </div>

                                            </div>

                                            <div class="form-group" style="display:none">
                                                <label for="SiteId" class="control-label col-md-3 col-sm-3 col-xs-12">Site Id:</label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    <input id="SiteId" class="form-control col-md-7 col-xs-12" type="text" name="SiteId" value="">

                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="Web_Page_URL" class="control-label col-md-3 col-sm-3 col-xs-12">Web Page URL:</label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    <input id="Web_Page_URL" class="form-control col-md-7 col-xs-12" type="text" name="WebPageURL">

                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="OptionalPicture" class="control-label col-md-3 col-sm-3 col-xs-12">Optional Picture:</label>


                                                <div class="col-md-3">
                                                    <input id="OptionalPicture" readonly class="form-control col-md-3" type="text" name="OptionalPictureForSuccessPage">
                                                </div>
                                                <div class="col-md-3">
                                                    <input id="browse" type="file" name="OptionalPicture" style="display:none" onChange="Handlechange();">
                                                    <input type="button" class="btn btn-success" value="Browse" id="OptionalPicture" name="OptionalPicture" onclick="HandleBrowseClick();" />
                                                </div>

                                            </div>


                                            <div class="form-group">
                                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                                    <input type="submit" id="Save" class="btn btn-success" value="Save" />
                                                </div>
                                            </div>
                                            @*
                                                </form>*@
                                        }
                                    </div>

                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>




        <!-- /page content -->
        <!-- footer content -->
        <footer>

            <div class="clearfix"></div>
        </footer>
        <!-- /footer content -->
    </div>
    </div>


    <!-- jQuery -->
    <script src="../vendors/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="../vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="../vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <!-- DateJS -->
    <script src="../vendors/DateJS/build/date.js"></script>
    <!-- Custom Theme Scripts -->
    <script src="../build/js/custom.min.js"></script>

</body>
</html>

<script type="text/javascript">

    var siteId = localStorage.getItem("SiteId");
    document.getElementById('SiteId').value = siteId;
    var siteName = localStorage.getItem("SiteName");
    document.getElementsByTagName('form')[0].innerHTML = siteName;



    function HandleBrowseClick() {
        var fileinput = document.getElementById("browse");
        fileinput.click();
    }

    function Handlechange() {
        var fileinput = document.getElementById("browse");
        var textinput = document.getElementById("OptionalPicture");
        textinput.value = fileinput.value;
    }


    function OnChange(dropdown)
{
    var myindex  = dropdown.selectedIndex
    var SelValue = dropdown.options[myindex].value

    if(SelValue=="Route to URL")
    {
    document.getElementById("Web_Page_URL").required = true;
    }
    else
    {
    document.getElementById("Web_Page_URL").required = false;
    }
}

</script>

<script>
    $(document).ready(function(){

        navigation();

    })

</script>





